<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>


<VBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.sophia.PrimaryController">

      <Label text="Cadastro de Clientes" style="-fx-font-size: 20px; -fx-font-weight: bold;"/>
         <HBox spacing="10" alignment="CENTER_LEFT">
         <Label text="Nome:" />
         <TextField fx:id="nomeField" prefWidth="400"/>
         </HBox>
      
         <HBox spacing="10" alignment="CENTER_LEFT">
            <Label text="CEP:" />
            <TextField fx:id="cep" promptText="99999-999" />
            <Button text="Buscar" onAction="#buscarCep" />
         </HBox>

         <HBox spacing="10" alignment="CENTER_LEFT">
            <Label text="Rua:" />
            <TextField fx:id="rua" prefWidth="350" />
            <Label text="NÃºmero:" />
            <TextField fx:id="numero" />
         </HBox>

         <HBox spacing="10" alignment="CENTER_LEFT">
            <Label text="Cidade:" />
            <TextField fx:id="cidade" prefWidth="350" />
            <Label text="Estado:" />
            <TextField fx:id="estado" />
         </HBox>

         <HBox spacing="10" alignment="CENTER_LEFT">
            <Label text="Telefone:" />
            <TextField fx:id="telefone" prefWidth="350" />
         </HBox>
         <HBox spacing="50" alignment="CENTER">
            <Button text="Limpar" onAction="#limpar" />
            <Button text="Gravar" onAction="#gravar" />
         </HBox>
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
   </padding>
</VBox>
